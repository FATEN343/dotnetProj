@model IEnumerable<ProjetDotNet.Models.Product>

@{
	ViewData["Title"] = "Home";
}

<div class="my-2">
	<form class="row row-cols-lg-auto g-3 align-items-center">
		<div class="col-12">
			<label class="visually-hidden" for="categoryId">Categories</label>
			<select class="form-select" id="categoryId" name="categoryId">
				<option selected>Category</option>
				@* Categories will be added later *@
			</select>
		</div>

		<div class="col-12">
			<label class="visually-hidden" for="sterm">Search by title</label>
			<div class="input-group">
				<div class="input-group-text"></div>
				<input type="text" class="form-control" value="" id="sterm" name="sterm" placeholder="Search by title">
			</div>
		</div>

		<div class="col-12">
			<button type="submit" class="btn btn-primary">Search</button>
			<a href="/Home/Index" class="btn btn-dark">Reset</a>
		</div>
	</form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
	@foreach (var product in Model ?? new List<ProjetDotNet.Models.Product>())
	{
			<div class="card mx-3 mb-4" style="width: 11rem;">
				<img style="width:100%;height:180px" 
					 src="@(string.IsNullOrEmpty(product.Image) ? "/images/NoImage.png" : $"/images/{product.Image}")" 
					 class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@product.ProductName</h5>
					<p class="card-text">
						<b>Price: </b>@product.Price
					@* Commented out properties that donâ€™t exist yet: CategoryName, Quantity, BrandName *@
					</p>
				@* Comment out the Add to Cart button until Quantity exists *@
				@* <button type="button" onclick="add(@product.Id)" class="btn btn-primary">Add to cart</button> *@
				</div>
			</div>
	}
</div>

@section Scripts {
		<script>
			async function add(productId) {
				var usernameEl = document.getElementById("username");
				if (usernameEl == null) {
					window.location.href = "/Identity/Account/Login";
				}
			}
		</script>
}
